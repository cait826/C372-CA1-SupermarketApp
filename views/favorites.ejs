<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>My Favorites</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: lightblue; }
    .card-img-top { object-fit: cover; height: 160px; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h4 mb-0">Favorited Products</h1>
      <a href="/shopping" class="btn btn-outline-secondary btn-sm">Continue Shopping</a>
    </div>

    <% const list = Array.isArray(products) ? products : []; %>

    <% if (list.length === 0) { %>
      <div class="alert alert-info">You have no favorites yet.</div>
    <% } else { %>
      <div class="row g-4">
        <% list.forEach(function(product){ %>
          <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
              <% } else { %>
                <div class="ratio ratio-16x9 bg-secondary d-flex align-items-center justify-content-center text-white">
                  No image
                </div>
              <% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.productName %></h5>
                <p class="card-text mb-2"><strong>Price:</strong> $<%= Number(product.price || 0).toFixed(2) %></p>

                <div class="mt-auto">
                  <div class="d-flex gap-2">
                    <form method="POST" action="/favorite/remove/<%= product.id %>" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Unfavorite</button>
                    </form>

                    <form method="POST" action="/add-to-cart/<%= product.id %>" style="display:inline;">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <%- include("./partials/footer") %>
</body>
</html>