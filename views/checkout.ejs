<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color: lightblue;">
    <div class="container mt-5">

        <% if (orderCompleted) { %>

        
            <h2 class="text-center text-success mb-4">Your Order Has Been Completed!</h2>

            <h4 class="text-center">Order ID: <%= order.id %></h4>
            <h4 class="text-center mb-5">Total: $<%= order.total_price %></h4>

            <div class="text-center">
                <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
                <a href="/invoice/<%= order.id %>" class="btn btn-secondary ms-2">View Invoice</a>
            </div>

        <% } else { %>

            <!-- REVIEW ORDER -->
            <h2 class="text-center mb-4">Review Your Order</h2>

            <table class="table table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Qty</th>
                        <th>Price (each)</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>

                <tbody>
                    <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.productName %></td>
                        <td><img src="/images/<%= item.image %>" width="70"></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= item.price %></td>
                        <td>$<%= item.price * item.quantity %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>

            <h3 class="text-end">Total: $<%= total %></h3>

            <div class="text-center mt-4">
                <form action="/checkoutconfirm" method="POST">
                    <button type="submit" class="btn btn-success">Complete Order and Proceed to Checkout</button>
                </form>
            </div>

        <% } %>

    </div>
</body>
</html>


