<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color: lightblue;">
    <div class="container mt-5">
        <h2 class="text-center mb-4"><%= reviewMode ? "Review Order" : "Your Shopping Cart" %></h2>

        <% if (items.length === 0) { %>
            <p class="text-center text-muted">Your cart is empty.</p>
            <div class="text-center">
                <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
            </div>
        <% } else { %>

            <table class="table table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <% if (!reviewMode) { %><th>Actions</th><% } %>
                    </tr>
                </thead>

                <tbody>
                    <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.productName %></td>
                        <td><img src="/images/<%= item.image %>" width="70"></td>
                        <td>
                            <% if (!reviewMode) { %>
                            <form action="/cart/update/<%= item.cartId %>" method="POST" class="d-inline">
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control" style="width: 80px; margin: auto;" />
                                <button type="submit" class="btn btn-sm btn-primary mt-2">Update</button>
                            </form>
                            <% } else { %>
                                <%= item.quantity %>
                            <% } %>
                        </td>

                        <td>$<%= item.price %></td>
                        <td>$<%= item.price * item.quantity %></td>

                        <% if (!reviewMode) { %>
                        <td>
                            <form action="/cart/remove/<%= item.cartId %>" method="POST">
                                <button class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                        <% } %>
                    </tr>
                    <% }) %>
                </tbody>
            </table>

            <h3 class="text-end">Total: $<%= total %></h3>

            <div class="text-center mt-4">
                <% if (!reviewMode) { %>
                    <a href="/cart/clear" class="btn btn-danger">Clear Cart</a>

                    <a href="/shopping" class="btn btn-primary ms-2">Add More Products</a>

                    <a href="/cart/review" class="btn btn-success ms-2">Proceed to Checkout</a>
                <% } else { %>
                    <a href="/cart" class="btn btn-warning">Go Back</a>
                    <a href="/checkout" class="btn btn-success ms-2">Confirm Order</a>
                <% } %>
            </div>

        <% } %>
    </div>
</body>
</html>


