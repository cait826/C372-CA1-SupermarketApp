<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Review Order</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    .product-img { width:64px; height:64px; object-fit:cover; border-radius:6px; }
    </style>
</head>
<body style="background-color: lightblue;">
  <div class="container py-5">
    <h2 class="text-center mb-4">Review Your Order</h2>

    <% const list = Array.isArray(items) ? items : []; %>
    <% const totalAmount = Number(total || 0); %>

    <% if (!list.length) { %>
      <div class="alert alert-info text-center">Your cart is empty.</div>
      <div class="text-center">
        <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
      </div>
    <% } else { %>

      <div class="table-responsive mb-3">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th class="text-start">Product</th>
              <th>Image</th>
              <th class="text-end">Price</th>
              <th class="text-center">Quantity</th>
              <th class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% list.forEach(function(item){ 
                 const name = item.productName || 'Product';
                 const img = item.image || '';
                 const price = Number(item.price || item.price_each || 0);
                 const qty = Number(item.quantity || 0);
                 const subtotal = price * qty;
            %>
              <tr>
                <td class="text-start"><%= name %></td>

                <td class="text-center">
                  <% if (img) { %>
                    <img src="/images/<%= img %>" alt="<%= name %>" class="product-img">
                  <% } else { %>
                    <span class="text-muted">No image</span>
                <% } %>
                </td>

                <td class="text-end">$<%= price.toFixed(2) %></td>

                <td class="text-center"><%= qty %></td>

                <td class="text-end">$<%= subtotal.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div></div>
        <div class="text-end">
          <h4>Total: $<%= totalAmount.toFixed(2) %></h4>
        </div>
      </div>

      <div class="d-flex justify-content-end gap-2">
        <a href="/cart" class="btn btn-secondary">Back to Cart</a>

        <form action="/checkoutconfirm" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-success">Confirm Checkout</button>
        </form>
      </div>

    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>