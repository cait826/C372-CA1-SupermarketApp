<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Checkout - Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: lightblue; font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; }
        .review-container { padding: 2.5rem 0; }
        .item-card { background: #fff; border-radius: .75rem; padding: 1rem; box-shadow: 0 6px 18px rgba(15,23,42,0.06); margin-bottom: 1rem; }
        .product-img { width: 120px; height: 96px; object-fit: cover; border-radius: .5rem; }
        .muted { color: #6c757d; }
        .card-divider { height:1px; background:#eef3fb; margin: .75rem 0; border-radius:2px; }
        .summary-card { background: #fff; border-radius: .75rem; padding: 1.25rem; box-shadow: 0 8px 24px rgba(15,23,42,0.06); }
        .summary-card .total { font-size: 1.5rem; font-weight: 700; color: #0d6efd; }
        .btn-checkout { padding: .6rem 1rem; border-radius: .5rem; font-weight: 600; }
        .success-card { background: #e9f7ef; border-radius:.75rem; padding:1rem; box-shadow: 0 6px 18px rgba(15,23,42,0.04); border-left:4px solid #198754; }
        @media (max-width:767.98px){
          .product-img { width: 100%; height: 160px; margin-bottom: .75rem; }
        }
    </style>
</head>

<body>
  <div class="container review-container">
    <% const list = Array.isArray(items) ? items : []; %>
    <% const totalAmount = Number(total || 0); %>

    <% if (typeof orderCompleted !== 'undefined' && orderCompleted) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="success-card">
            <h4 class="mb-2 text-success">Order Completed Successfully</h4>
            <p class="mb-1 muted">Thank you â€” your order has been placed.</p>
            <% if (typeof order !== 'undefined' && order && order.id) { %>
              <p class="mb-2">Order ID: <strong><%= order.id %></strong></p>
              <div class="d-flex gap-2">
                <a href="/invoice/<%= order.id %>" class="btn btn-primary">View Invoice</a>
                <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
              </div>
            <% } else { %>
              <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>

    <div class="row">
      <!-- Left: Item cards -->
      <div class="col-md-8">
        <% if (!list.length) { %>
          <div class="card item-card text-center">
            <div class="card-body">
              <p class="text-muted mb-3">Your cart is empty.</p>
              <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
            </div>
          </div>
        <% } else { %>
          <% list.forEach(function(item){ 
               const name = item.productName || item.product_name || 'Product';
               const img = item.image || '';
               const price = Number(item.price || item.price_each || 0);
               const qty = Number(item.quantity || 0);
               const subtotal = price * qty;
          %>
            <div class="card item-card">
              <div class="d-flex flex-column flex-md-row align-items-start gap-3">
                <div class="flex-shrink-0">
                  <% if (img) { %>
                    <img src="/images/<%= img %>" alt="<%= name %>" class="product-img">
                  <% } else { %>
                    <div class="product-img bg-light d-flex align-items-center justify-content-center muted">No image</div>
                  <% } %>
                </div>

                <div class="flex-grow-1">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h5 class="mb-1"><%= name %></h5>
                      <div class="muted small">Unit price: $<%= price.toFixed(2) %></div>
                    </div>

                    <div class="text-end">
                      <div class="muted small">Quantity</div>
                      <div style="font-weight:700;"><%= qty %></div>
                    </div>
                  </div>

                  <div class="card-divider"></div>

                  <div class="d-flex justify-content-between align-items-center">
                    <div class="muted small">Item subtotal</div>
                    <div style="font-weight:700;">$<%= subtotal.toFixed(2) %></div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>

      <!-- Right: Order summary -->
      <div class="col-md-4">
        <div class="summary-card">
          <h5 class="mb-3">Order Summary</h5>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="muted">Subtotal</div>
            <div>$<%= totalAmount.toFixed(2) %></div>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="muted">Shipping</div>
            <div class="muted">Calculated at checkout</div>
          </div>

          <div class="card-divider"></div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="muted">Total</div>
            <div class="total">$<%= totalAmount.toFixed(2) %></div>
          </div>

          <div class="d-grid gap-2">
            <form action="/checkoutconfirm" method="POST" style="margin:0;">
              <button type="submit" class="btn btn-success btn-lg btn-checkout w-100">Proceed to Confirm Order</button>
            </form>

            <a href="/cart" class="btn btn-outline-secondary btn-lg">Back to Cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include("./partials/footer") %>
</body>

</html>


