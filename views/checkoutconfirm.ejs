<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Order Confirmation</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: lightblue; font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; color:#0b2540; }
    .page-container { padding: 2.5rem 0; }
    .item-card { background: #fff; border-radius: .75rem; padding: 1rem; box-shadow: 0 6px 18px rgba(15,23,42,0.06); margin-bottom: 1rem; }
    .product-img { width: 110px; height: 88px; object-fit: cover; border-radius: 8px; }
    .summary-card { background: #fff; border-radius: .75rem; padding: 1.25rem; box-shadow: 0 8px 24px rgba(15,23,42,0.06); }
    .card-divider { height:1px; background:#eef3fb; margin: .75rem 0; border-radius:2px; }
    .total-amount { font-size: 1.4rem; font-weight: 700; color: #0d6efd; }
    .muted { color:#6c757d; }
    .success-header { padding:1.25rem; border-radius:.75rem; box-shadow: 0 6px 18px rgba(15,23,42,0.04); }
    .actions .btn { min-width:160px; }
    @media (max-width:767.98px){
      .product-img { width: 100%; height: 160px; margin-bottom: .75rem; }
    }
  </style>
</head>
<body>
  <% const hasReview = (typeof reviewExists !== 'undefined') ? reviewExists : false; %>
  <% const totalAmount = Number(total ?? (order && order.total_price) ?? 0); %>

  <div class="container page-container">
    <% if (typeof orderCompleted !== 'undefined' && orderCompleted) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="alert alert-success success-header">
            <h2 class="mb-2">Your Order Has Been Successfully Completed!</h2>
            <div class="d-flex justify-content-between align-items-center flex-column flex-sm-row">
              <div class="mb-2 mb-sm-0">
                <% if (order && order.id) { %>
                  <div class="muted">Order ID</div>
                  <div><strong><%= order.id %></strong></div>
                <% } %>
              </div>

              <div class="text-sm-end">
                <div class="muted">Total Paid</div>
                <div class="total-amount">$<%= totalAmount.toFixed(2) %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-12">
          <div class="card p-3 shadow-sm">
            <h5 class="mb-3">Next Actions</h5>
            <div class="d-flex flex-wrap gap-2 actions">
              <a href="/shopping" class="btn btn-primary">Continue Shopping</a>

              <% if (order && order.id) { %>
                <a href="/invoice/<%= order.id %>" class="btn btn-outline-secondary">View Invoice</a>

                <% if (!hasReview) { %>
                  <a href="/review/<%= order.id %>" class="btn btn-warning">Write a Review</a>
                <% } else { %>
                  <span class="btn btn-outline-secondary disabled" aria-disabled="true">Review Submitted</span>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Also show items & summary below for reference -->
    <% } %>

    <div class="row">
      <!-- Left: item cards -->
      <div class="col-md-8">
        <% if (items && items.length > 0) { %>
          <% items.forEach(item => { %>
            <% const price = Number(item.priceEach || item.price || item.price_each || 0); %>
            <% const qty = Number(item.quantity || 0); %>
            <% const subtotal = (item.subtotal !== undefined) ? Number(item.subtotal) : price * qty; %>
            <% const img = item.image || item.productImage || item.img || null; %>

            <div class="card item-card">
              <div class="d-flex align-items-start">
                <div class="flex-shrink-0">
                  <% if (img) { %>
                    <img src="/images/<%= img %>" alt="<%= item.productName || item.name || item.products_name || 'Product' %>" class="img-fluid rounded" style="width: 90px; height: 90px; object-fit: cover;">
                  <% } else { %>
                    <div class="d-flex align-items-center justify-content-center bg-light border rounded" style="width: 90px; height: 90px;">
                      <span class="text-muted small">No image</span>
                    </div>
                  <% } %>
                </div>

                <div class="ms-3 flex-grow-1">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h5 class="fw-semibold mb-1"><%= item.productName || item.name || item.products_name || "Product" %></h5>
                      <p class="mb-0 text-muted">Price each: $<%= price.toFixed(2) %></p>
                      <p class="mb-0 text-muted">Quantity: <%= qty %></p>
                    </div>

                    <div class="text-end">
                      <p class="mb-0 text-muted">Subtotal</p>
                      <p class="fw-semibold">$<%= subtotal.toFixed(2) %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="card item-card text-center">
            <div class="card-body">
              <p class="text-muted mb-3">No items to display.</p>
              <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Right: order summary -->
      <div class="col-md-4">
        <div class="summary-card">
          <h5 class="mb-3">Order Summary</h5>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="muted">Subtotal</div>
            <div>$<%= totalAmount.toFixed(2) %></div>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="muted">Shipping</div>
            <div class="muted">Free</div>
          </div>

          <div class="card-divider"></div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="muted">Total</div>
            <div class="total-amount">$<%= totalAmount.toFixed(2) %></div>
          </div>

          <!-- Order action buttons (final screen) -->
          <div class="d-grid gap-2">
            <a href="/order_history" class="btn btn-success btn-lg w-100">View Order History</a>
            <a href="/cart" class="btn btn-outline-secondary w-100 mt-2">Back to Cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <%- include("./partials/footer") %>
</body>
</html>
