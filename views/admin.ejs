<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body style="background-color: lightblue">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class = "nav-item">
                <a class="nav-link" href="/inventory">View Inventory</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/manageuser">Manage Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h2>Admin Dashboard</h2>
      <p>Welcome, <%= user.username %> (<%= user.role %>)! Use the navigation bar to manage products and users.</p>
    </div>
    <br> 
    <button class="btn btn-primary" onclick="location.href='/inventory'">View Inventory</button>
    <button class="btn btn-secondary" onclick="location.href='/manageuser'">Manage Users</button>
    <button class="btn btn-success" onclick="location.href='/addProduct'">Add Product</button>
</body>
</html>