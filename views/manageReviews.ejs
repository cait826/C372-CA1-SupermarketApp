<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Customer Feedback & Reviews</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f0f8ff; } /* light blue-ish */
    .card-rating { color: #f6c02d; font-size: 1.1rem; }
    .card-comment { white-space: pre-wrap; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 mb-0">Customer Feedback & Reviews</h1>
      <div>
        <a href="/admin" class="btn btn-outline-secondary btn-sm">Back to Admin</a>
      </div>
    </div>

    <% const list = Array.isArray(reviews) ? reviews : []; %>

    <% if (list.length === 0) { %>
      <div class="alert alert-info">No reviews found.</div>
    <% } else { %>
      <div class="row g-4">
        <% list.forEach(function(review){ %>
          <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="mb-2">
                  <h5 class="card-title mb-1"><%= review.username || 'User' %></h5>
                  <small class="text-muted">Order ID: <a href="/invoice/<%= review.order_id %>">#<%= review.order_id %></a></small>
                </div>

                <div class="mb-2 d-flex justify-content-between align-items-start">
                  <div class="card-rating" aria-label="Rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <% if (i <= Number(review.rating || 0)) { %>
                        <span>★</span>
                      <% } else { %>
                        <span style="color:#e9ecef">★</span>
                      <% } %>
                    <% } %>
                  </div>
                  <small class="text-muted"><%= review.created_at ? new Date(review.created_at).toLocaleString() : '' %></small>
                </div>

                <p class="card-comment mb-3"><%= review.comment || 'No comment' %></p>

                <div class="mt-auto">
                  <small class="text-muted">Reviewer ID: <%= review.users_id %></small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <%- include("./partials/footer") %>
</body>
</html>