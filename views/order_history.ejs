<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Your Order History</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { background-color: lightblue; font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; }
    .page-header { padding: 2.25rem 0 1rem; }
    .orders-wrap { padding-bottom: 3rem; }
    .order-card { border-radius: .8rem; background: #fff; box-shadow: 0 6px 18px rgba(16,24,40,0.06); }
    .order-card:hover { transform: translateY(-4px); transition: .18s ease; box-shadow: 0 10px 30px rgba(16,24,40,0.09); }
    .order-meta { color: #6c757d; font-size: .95rem; }
    .order-id { font-weight: 700; font-size: 1.05rem; }
    .order-total { font-weight: 700; color: #0d6efd; }
    .actions .btn { min-width: 120px; }
    .badge-status { font-weight:600; padding:.45em .6em; border-radius:.6rem; }
    @media (max-width: 767.98px) {
      .order-grid { gap: 1rem; }
    }
  </style>
</head>
<body>
  <div class="container orders-wrap">
    <div class="page-header text-center">
      <h2 class="mb-1">My Orders</h2>
      <p class="muted">A record of your past purchases and their current status.</p>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info text-center">
        You have no order history yet.
      </div>
      <div class="text-center mt-3">
        <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
      </div>
    <% } else { %>

      <div class="d-flex flex-column gap-3">
        <% orders.forEach(order => { %>
          <div class="order-card p-3">
            <div class="row align-items-center">
              <div class="col-md-4 mb-2 mb-md-0">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="order-id">Order #<%= order.id %></div>
                    <div class="order-meta"><i class="bi bi-calendar-event"></i> <%= order.order_date.toLocaleString() %></div>
                  </div>

                  <div class="text-end d-none d-md-block">
                    <div class="<%= order.status === 'Pending' ? 'badge-status bg-warning text-dark' : order.status === 'Completed' ? 'badge-status bg-success text-white' : 'badge-status bg-secondary text-white' %>">
                      <%= order.status %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-4 mb-2 mb-md-0 text-md-center">
                <div class="muted">Total Price</div>
                <div class="order-total">$<%= Number(order.total_price).toFixed(2) %></div>
              </div>

              <div class="col-md-4 text-md-end">
                <div class="d-flex justify-content-md-end gap-2 align-items-center actions">
                  <a href="/invoice/<%= order.id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-file-earmark-text me-1"></i> View Invoice
                  </a>

                  <% if (!order.reviewExists) { %>
                    <a href="/review/<%= order.id %>" class="btn btn-warning btn-sm ms-1">
                      <i class="bi bi-star me-1"></i> Leave a Review
                    </a>
                  <% } %>

                  <!-- mobile status badge -->
                  <div class="d-md-none">
                    <div class="mt-2">
                      <div class="<%= order.status === 'Pending' ? 'badge-status bg-warning text-dark' : order.status === 'Completed' ? 'badge-status bg-success text-white' : 'badge-status bg-secondary text-white' %>">
                        <%= order.status %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="text-center mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <%- include("./partials/footer") %>
</body>
</html>