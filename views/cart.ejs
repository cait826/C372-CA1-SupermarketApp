<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color: lightblue;">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Your Shopping Cart</h2>

        <% const itemsList = Array.isArray(items) ? items : []; %>

        <% if (itemsList.length === 0) { %>
            <p class="text-center text-muted">Your cart is empty.</p>
            <div class="text-center">
                <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
            </div>
        <% } else { %>

            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-start">Product</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% itemsList.forEach(item => { 
                            const price = Number(item.price || 0);
                            const qty = Number(item.quantity || 0);
                        %>
                        <tr>
                            <td class="text-start"><%= item.productName %></td>
                            <td>
                                <% if (item.image) { %>
                                    <img src="/images/<%= item.image %>" width="70" alt="<%= item.productName %>">
                                <% } else { %>
                                    <span class="text-muted">No image</span>
                                <% } %>
                            </td>

                            <td>$<%= price.toFixed(2) %></td>

                            <td>
                                <form action="/cart/update/<%= item.cartId %>" method="POST" class="d-flex justify-content-center align-items-center">
                                    <input type="number" name="quantity" value="<%= qty %>" min="1" class="form-control" style="width: 90px;">
                                    <button type="submit" class="btn btn-sm btn-primary ms-2">Update</button>
                                </form>
                            </td>

                            <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>

                            <td>
                                <form action="/cart/remove/<%= item.cartId %>" method="POST" onsubmit="return confirm('Remove this item?');">
                                    <button class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <h3 class="text-end">Total: $<%= Number(total).toFixed(2) %></h3>
            <div class="text-center mt-4">
                <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
                <a href="/cart/clear" class="btn btn-danger ms-2" onclick="return confirm('Clear cart?');">Clear Cart</a>
                <a href="/reviewcart" class="btn btn-success ms-2">Review Order</a>
            </div>
        <% } %>
    </div>
</body>
</html>


