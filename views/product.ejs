<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root{
      --accent:#0d6efd;
      --muted:#6c757d;
      --bg:#f7fbff;
      --card-bg:#ffffff;
    }
    body{ background:var(--bg); font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; color:#123; }
    .product-container{ padding:3rem 0; }
    .product-card{ background:var(--card-bg); border-radius:12px; box-shadow:0 6px 20px rgba(16,24,40,0.08); padding:1.25rem; }
    .product-image { width:100%; border-radius:12px; object-fit:cover; box-shadow:0 10px 30px rgba(16,24,40,0.12); }
    .price { font-size:1.75rem; font-weight:700; color:var(--accent); }
    .muted { color:var(--muted); }
    .divider { height:1px; background:#eef3fb; margin:1rem 0; border-radius:2px; }
    .meta-row { gap:.75rem; display:flex; align-items:center; flex-wrap:wrap; color:#495057; }
    .fav-btn { border-radius:8px; padding:.45rem .7rem; font-weight:600; }
    .fav-btn.hearted { background:#ffeef0; color:#d63384; border:1px solid rgba(214,51,132,0.12); }
    .btn-add { padding:.6rem 1rem; border-radius:8px; }
    .small-muted { color:#6c757d; font-size:.95rem; }
    @media (max-width:767.98px){
      .product-container{ padding:1.5rem 0; }
      .price{ font-size:1.5rem; }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto">
          <% if (user && user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link" href="/inventory" style="color: #4a9eff;">Inventory</a></li>
            <li class="nav-item"><a class="nav-link" href="/addProduct" style="color: #4a9eff;">Add new product</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/shopping" style="color: #4a9eff;">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout" style="color: #4a9eff;">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container product-container">
    <div class="product-card">
      <div class="row g-4">
        <!-- Left: Image -->
        <div class="col-md-5">
          <% if (product && product.image) { %>
            <img src="../images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
          <% } else { %>
            <div class="d-flex align-items-center justify-content-center product-image bg-light muted" style="height:420px;">
              No image
            </div>
          <% } %>
        </div>

        <!-- Right: Details -->
        <div class="col-md-7">
          <h1 class="h3 mb-2"><%= product.productName %></h1>

          <div class="d-flex align-items-center mb-3">
            <div class="price me-3">$<%= Number(product.price || 0).toFixed(2) %></div>
            <div class="small-muted">In stock: <strong><%= product.quantity %></strong></div>
          </div>

          <div class="meta-row mb-3">
            <div>
              <strong>⭐</strong>
              <span style="margin-left:.35rem;">
                <%= (product.avgRating !== undefined && product.avgRating !== null) ? product.avgRating.toFixed(1) : "0.0" %>
              </span>
              <small class="muted" style="margin-left:.5rem;">(<%= product.reviewCount || 0 %> reviews)</small>
            </div>

            <div class="ms-3">
              <strong>❤️</strong>
              <small class="muted" style="margin-left:.35rem;"><%= product.favoriteCount || 0 %> favorites</small>
            </div>
          </div>

          <div class="divider"></div>

          <!-- Description (if available) -->
          <% if (product.description) { %>
            <p class="mb-3"><%= product.description %></p>
          <% } else { %>
            <p class="mb-3 small-muted">No description available for this product.</p>
          <% } %>

          <div class="d-flex align-items-center gap-3">
            <!-- Favorite button (form unchanged) -->
            <form method="POST" action="/favorite/<%= product.id %>">
              <button type="submit" class="btn fav-btn hearted">
                ❤️ Favorite
              </button>
            </form>

            <!-- Add to cart form (unchanged) -->
            <form method="POST" action="/add-to-cart/<%= product.id %>">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="btn btn-primary btn-add">
                Add to Cart
              </button>
            </form>

            <!-- Optional quick actions -->
            <a href="/shopping" class="btn btn-outline-secondary ms-2">Continue Shopping</a>
          </div>

          <div class="mt-4 small-muted">
            <div>Product ID: <%= product.id %></div>
            <% if (user) { %>
              <div>Viewing as: <strong><%= user.username %></strong></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include("./partials/footer") %>
</body>
</html>
